# Database Configuration
DATABASE_URL=postgresql://navify_user:navify_password@localhost:5432/navify_db

# Redis Configuration (for OTP storage and caching)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN_SECONDS=2592000

# Server Configuration
NODE_ENV=development
PORT=5001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# SMS/OTP Configuration (replace with actual service)
SMS_API_KEY=your-sms-service-api-key
SMS_SERVICE_URL=https://api.your-sms-provider.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Security
BCRYPT_ROUNDS=12

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Development Settings
DEBUG=navify:* 